{{#each discounts as |discount|}}
	<div class="col-md-4" id="{{discount._id}}">
		<div class="card">
			<div class="card-body pb-0">
				<h4 class="card-title text-uppercase">{{discount.code}}</h4>
			</div>
			<div class="card-footer ">
				<div class="author">
					<h6 class="card-category text-danger">
						Discount:
						{{discount.amount}}{{#if isPercent}}%{{else}} INR{{/if}}
					</h6>
				</div>
				<div class="stats ml-auto">
					<i class="material-icons delete-discount-btn" style="top: 0%; cursor: pointer;" data-discount-id="{{discount._id}}" data-tuition-id="{{discount.tuitionId}}" data-parent="{{discount.parentId}}">delete</i>
					<i class="material-icons discount-edit" style="top: 0%; cursor: pointer;" data-discount-id="{{discount._id}}" data-tuition-id="{{discount.tuitionId}}">edit</i>
				</div>
			</div>
		</div>
	</div>
{{/each}}
