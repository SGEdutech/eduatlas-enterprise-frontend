{{#each discounts as |discount|}}
<div class="col-md-4" id="{{discount._id}}">
    <div class="card">
        <div class="card-body ">
            <h4 class="card-title">
                <a href="#pablo">{{discount.code}}</a>
            </h4>
        </div>
        <div class="card-footer ">
            <div class="author">
                <h6 class="card-category text-danger">
                    Magnitude:
                    {{discount.amount}}{{#if isPercent}}% of course fee{{else}} bucks{{/if}}
                </h6>
            </div>
            <div class="stats ml-auto">
                <i class="material-icons delete-discount-btn" style="top: 0%; cursor: pointer;" data-discount-id="{{discount._id}}"
                    data-tuition-id="{{discount.tuitionId}}" data-parent="{{discount.parentId}}">delete</i>
                <i class="material-icons discount-edit" style="top: 0%; cursor: pointer;" data-discount-id="{{discount._id}}"
                    data-tuition-id="{{discount.tuitionId}}">edit</i>
            </div>
        </div>
    </div>
</div>
{{/each}}