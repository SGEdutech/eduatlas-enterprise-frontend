{{#each forums as |post|}}
<form class="edit-post-form" data-tuition="{{post.tuitionId}}" data-post="{{post._id}}" data-modal="editPostModal{{post._id}}">
    <div class="modal fade bd-example-modal-lg" id="editPostModal{{post._id}}" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="post-title">Title</label>
                            <input type="text" id="post-title" name="title" class="form-control" value="{{title}}">
                        </div>
                        <div class="form-group">
                            <label for="post-body">Body</label>
                            <textarea name="body" class="form-control" id="post-body" rows="3">{{body}}</textarea>
                        </div>
                    </div>
                    <div class="col-sm-12 col-xs-12 mt-3 ml-3 text-right">
                        <button type="submit" class="btn btn-round btn-rose">Save</button>
                        <button type="button" class="btn btn-round btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
{{/each}}