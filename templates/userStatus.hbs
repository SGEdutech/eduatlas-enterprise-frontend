{{#if loggedIn}}
    <a href="#" class="profile-photo dropdown-toggle nav-link" data-toggle="dropdown">
        <div class="profile-photo-small">
            <img src="/assets/img/logo.png" alt="Circle Image"
                 class="rounded img-fluid w-100 h-100">
        </div>
    </a>
    <div class="dropdown-menu dropdown-menu-right">
        <h6 class="dropdown-header">{{firstName}}</h6>
        <a class="dropdown-item" style="cursor: pointer" href="/User-dashboard.html">Dashboard</a>
        <a id="log_out_btn" class="btn btn-sm btn-outline-info dropdown-item">Logout</a>
    </div>
{{else}}
    <button class="btn btn-info btn-sm" data-toggle="modal" data-target="#loginModal">Login</button>
{{/if}}