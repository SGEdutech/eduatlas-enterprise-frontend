{{#each batches as |batch|}}
{{#if schedules}}
<div class="card">
    <div class="card-body">
        <div class="card-title">{{batch.code}}</div>
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-12">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>From Time</th>
                                    <th>To Time</th>
                                    <th>Topic</th>
                                    <th>Faculty</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each schedules as |schedule|}}
                                <tr id="{{schedule._id}}">
                                    <td>{{schedule.date}}</td>
                                    <td>{{schedule.fromTime}}</td>
                                    <td>{{schedule.toTime}}</td>
                                    <td>{{schedule.topic}}</td>
                                    <td>{{schedule.faculty}}</td>
                                    <td>
                                        <i class="material-icons delete-schedule-btn" style="top: 0%; cursor: pointer;"
                                            data-schedule-id="{{schedule._id}}" data-tuition-id="{{batch.tuitionId}}"
                                            data-course-id="{{batch.courseId}}" data-batch-id="{{batch._id}}">delete</i>
                                        <i class="material-icons schedule-edit" style="top: 0%; cursor: pointer;"
                                            data-schedule-id="{{schedule._id}}" data-tuition-id="{{batch.tuitionId}}"
                                            data-course-id="{{batch.courseId}}" data-batch-id="{{batch._id}}">edit</i>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}
{{/each}}