{{!-- FIXME: hard coding so inputs don't slip out of the modal --}}
<div style="padding: 30px">
	<div class="row">
		<div class="col-2">
			Roll Number
		</div>
		<div class="col-2">
			Name
		</div>
		<div class="col-2">
			E-Mail
		</div>
		<div class="col-2">
			Address
		</div>
		<div class="col-2">
			Contact Number
		</div>
	</div>
	{{#each students as |student|}}
		<div class="row">
			<div class="col-2">
				<input type="text" class="form-control row" value="{{[Roll Number]}}">
			</div>
			<div class="col-2">
				<input type="text" value="{{Name}}" required>
			</div>
			<div class="col-2">
				<input type="email" value="{{[E-Mail]}}" required>
			</div>
			<div class="col-2">
				<input type="text" value="{{Address}}" required>
			</div>
			<div class="col-2">
				<input type="number" value="{{[Contact Number]}}" required>
			</div>
		</div>
	{{/each}}
</div>
