{{!-- FIXME: hard coding so inputs don't slip out of the modal --}}
<div style="padding: 30px">
	<div class="row">
		<div class="col-2">
			Roll Number
		</div>
		<div class="col-2">
			Name
		</div>
		<div class="col-2">
			E-Mail
		</div>
		<div class="col-2">
			Address
		</div>
		<div class="col-2">
			Contact Number
		</div>
	</div>
	{{#each students as |student|}}
		<div class="row student-row" data-row-number="{{@index}}">
			<div class="col-2">
				<input name="rollNumber" type="text" class="form-control row" value="{{[Roll Number]}}" data-row-number="{{@index}}" required>
			</div>
			<div class="col-2">
				<input name="name" type="text" value="{{Name}}" data-row-number="{{@index}}" required>
			</div>
			<div class="col-2">
				<input name="email" type="email" value="{{[E-Mail]}}" data-row-number="{{@index}}" required>
			</div>
			<div class="col-2">
				<input name="address" type="text" value="{{Address}}" data-row-number="{{@index}}" required>
			</div>
			<div class="col-2">
				<input name="contactNumber" type="number" value="{{[Contact Number]}}" data-row-number="{{@index}}" required>
			</div>
		</div>
	{{/each}}
</div>
