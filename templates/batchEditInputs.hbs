<div class="card my-0 bg-info">
    <div class="card-body pt-0 pb-0">
        <h3 class="card-title my-2">
            <a href="#pablo" class="text-dark">{{code}}</a>
        </h3>
    </div>
</div>
<div class="card my-0">
    <div class="card-body ">
        <div class="row align-items-center justify-content-around">
            <div class="col-sm-12 col-xs-12 mt-1">
                <div class="row">
                    <div class="col-md-4 pt-0 pb-0 border border-white">
                        <span class="input-group-addon" style="font-size: 12px;">
                            BATCH CODE
                        </span>
                    </div>
                    <div class="col-md-8 p-0">
                        <input name="code" type="text" class="form-control bg-white" placeholder="BATCH CODE" value="{{code}}">
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-xs-12 mt-1">
                <div class="row">
                    <div class="col-md-4 pt-0 pb-0">
                        <span class="input-group-addon" style="font-size: 12px;">
                            DESCRIPTION
                        </span>
                    </div>
                    <div class="col-md-8 p-0">
                        <input name="description" type="text" class="form-control bg-white" placeholder="DESCRIPTION"
                            value="{{description}}">
                    </div>
                </div>
            </div>
        </div>
        <div class="row align-items-center justify-content-around">
            <div class="col-sm-12 col-xs-12 mt-1">
                <div class="row">
                    <div class="col-md-4 pt-0 pb-0 border border-white">
                        <span class="input-group-addon" style="font-size: 12px;">
                            STUDENTS
                        </span>
                    </div>
                    <div class="col-md-8 p-0">
                        <div class="row">
                            <div class="col-md-9"><input type="text" placeholder="search students" class="form-control edit-batch-student-search-inp"
                                    data-tuition-id="{{_id}}"></div>
                            <div class="col-md-3"><a class="btn btn-sm btn-info edit-batch-student-search-reset text-white"
                                    data-tuition-id="{{_id}}">reset</a></div>
                        </div>
                        <div class="px-2" style="width:100%;max-height:500px!important;overflow-y: scroll!important;">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="text-center">#</th>
                                        <th><small>Name</small></th>
                                        <th><small>Roll Number</small></th>
                                        <th><small>Email</small></th>
                                        <th><small>Add/Remove</small></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each allStudents as |student|}}
                                    <tr id="{{randomId}}" class="student-row">
                                        <td class="text-center p-0">{{inc @index}}</td>
                                        <td class="p-0 text-capitalize">{{student.name}}</td>
                                        <td class="p-0">{{student.rollNumber}}</td>
                                        <td class="p-0">{{student.email}}</td>
                                        <td class="p-0">
                                            <input type="checkbox" name="students" value="{{student._id}}"
                                                {{#if student.inThisBatch}} checked{{/if}}> </td> </tr> {{/each}} </tbody>
                                                </table> </div> </div> </div> </div> </div> </div> </div>